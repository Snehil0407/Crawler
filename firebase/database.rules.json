{
  "rules": {
    "scans": {
      ".indexOn": ["timestamp", "userId"],
      ".read": "auth != null",
      ".write": "auth != null",
      "$scanId": {
        ".read": "auth != null && data.child('userId').val() === auth.uid",
        ".write": "auth != null && (newData.child('userId').val() === auth.uid || root.child('scans').child($scanId).child('userId').val() === auth.uid)",
        ".validate": "newData.hasChildren(['url', 'status', 'timestamp', 'userId'])"
      }
    },
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
